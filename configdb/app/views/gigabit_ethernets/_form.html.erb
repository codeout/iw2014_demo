<%= form_for @gigabit_ethernet, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :device_id, :class => 'control-label' %>
    <%= f.collection_select :device_id, Device.all, :id, :name, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label' %>
    <%= f.text_area :name, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label' %>
    <%= f.text_area :description, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :speed, :class => 'control-label' %>
    <%= f.text_area :speed, :class => 'form-control' %>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                gigabit_ethernets_path, :class => 'btn' %>
  </div>
<% end %>
