<%= form_for @device, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label' %>
    <%= f.text_area :name, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :fqdn, :class => 'control-label' %>
    <%= f.text_area :fqdn, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :platform, :class => 'control-label' %>
    <%= f.text_area :platform, :class => 'form-control' %>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                devices_path, :class => 'btn' %>
  </div>
<% end %>
